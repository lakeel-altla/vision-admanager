<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="@dimen/content_horizontal_margin"
        android:paddingEnd="@dimen/content_horizontal_margin"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout android:orientation="vertical"
                  android:layout_gravity="center_horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

        <FrameLayout android:layout_marginStart="@dimen/content_horizontal_margin"
                     android:layout_marginEnd="@dimen/content_horizontal_margin"
                     android:layout_marginTop="@dimen/content_vertical_margin"
                     android:layout_marginBottom="@dimen/content_vertical_margin"
                     android:layout_width="@dimen/user_actor_image_width"
                     android:layout_height="@dimen/user_actor_image_height">

            <ImageView android:id="@+id/image_view_thumbnail"
                       android:layout_width="@dimen/user_actor_image_width"
                       android:layout_height="@dimen/user_actor_image_height"/>

            <ProgressBar android:id="@+id/progress_bar_thumbnail"
                         android:indeterminate="true"
                         style="?android:attr/progressBarStyle"
                         android:layout_gravity="center"
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"/>

        </FrameLayout>

        <TextView android:id="@+id/text_view_name"
                  android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                  android:layout_gravity="center_horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
